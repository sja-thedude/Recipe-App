<h1>Shopping List </h1>

<div class="d-flex flex-row justify-content-evenly mb-5">
  <h3>Amount of food items to buy: <%= @recipe_food.length %> </h3>
  <h3>Total price: <%= @total_price %></h3>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Price</th>
        </tr>
    </thead>

    <tbody>
    <% @recipe_food.each do |fd|%>
    <tr>
      <td><%= fd.food.name%></th>
      <td><%= fd.quantity%><%= fd.food.measurementUnit  %></td>
      <td>$<%= fd.quantity* fd.food.price %></td>
    </tr>
  
    </tbody>
    <%end%>
</table>